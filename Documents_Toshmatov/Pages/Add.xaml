<Page x:Class="Documents_Toshmatov.Pages.Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Title="Add"
      d:DesignHeight="600" d:DesignWidth="400">

    <Grid Background="White" Margin="0,0,-617,-168">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#f0f0f0" Padding="15" BorderBrush="LightGray" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Image 
                       Source="/Image/icon-black.png" 
                       Height="62" 
                       VerticalAlignment="Top" Margin="-62,-12,843,0"/>
                <TextBlock Grid.Column="0" 
                           
                          Text="Добавить документ" 
                          FontSize="33" 
                          FontWeight="Bold" 
                          VerticalAlignment="Top" Margin="93,-3,470,0"/>

                <Button 
                       Content="Вернуться" 
                       Click="Back_Click"
                       Padding="15,5"
                       FontSize="16" 
                       Background="White" 
                       Foreground="Black"
                       BorderBrush="LightGray"
                       BorderThickness="1" Margin="845,2,10,24"/>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20" Margin="400,18,0,180" Grid.Row="1">
            <StackPanel Height="515">
                <!-- Заголовок формы -->

                <!-- Блок с изображением -->

                <!-- Поля формы -->
                <!-- Поля формы -->
                <!-- Поля формы -->
                <TextBlock Text="Укажите наименование:" FontWeight="SemiBold" />
                <TextBox x:Name="tb_name" Height="30" Margin="0,0,0,10"/>

                <TextBlock Text="Укажите ответственного:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="tb_user" Height="30" Margin="0,0,0,10"/>

                <TextBlock Text="Укажите код документа:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="tb_id" Height="30" Margin="0,0,0,10"/>

                <TextBlock Text="Укажите дату поступления:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="tb_date" Height="30" Margin="0,0,0,10"/>

                <TextBlock Text="Укажите статус:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <ComboBox x:Name="tb_status" Height="30" Margin="0,0,0,10" SelectionChanged="tb_status_SelectionChanged">
                    <ComboBoxItem Content="Входящий"/>
                    <ComboBoxItem Content="Исходящий"/>
                </ComboBox>
                <TextBlock Text="Направление:" FontWeight="SemiBold"/>


            </StackPanel>
        </ScrollViewer>
        <Image x:Name="src" Source="/Image/icon-black.png"  Stretch="Uniform" Margin="47,17,665,384" Grid.Row="1"/>
        <Button Content="Выбрать" 
                               Click="SelectImage_Click" 
                               Width="194" 
                              FontSize="25" 
                               HorizontalAlignment="Left" Margin="25,325,0,287" Grid.Row="1"/>
        <Button x:Name="btnAdd" 
                       Content="Сохранить" 
                       Click="AddDocument_Click"
                       Background="White" 
                       Foreground="Black"
                       BorderBrush="LightGray"
                       FontWeight="Bold"
                       HorizontalAlignment="Left"
                       Padding="20,5" Margin="828,358,0,287" Grid.Row="1" Width="154"/>
        <TextBox x:Name="tb_vector" TextChanged="tb_vector_TextChanged" Margin="421,358,212,287" Grid.Row="1"/>
    </Grid>
</Page>