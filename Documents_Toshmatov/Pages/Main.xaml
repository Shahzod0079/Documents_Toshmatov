<Page x:Class="Documents_Toshmatov.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Title="Main"
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#f0f0f0" Padding="15" BorderBrush="Gray" BorderThickness="0,0,0,1" Margin="0,0,0,31">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                          Text="Учёт входящих и исходящих документов" 
                          FontSize="16" 
                          FontWeight="Bold" 
                          VerticalAlignment="Top" Margin="58,-1,354,0"/>

                <Image 
                       Source="/Image/icon-black.png" 
                       Height="59" 
                       VerticalAlignment="Top" Margin="-12,-18,710,0"/>
                <Button Content="Выйти" 
                       Click="Exit_Click"
                       Padding="15,5"
                       Background="White" 
                       Foreground="Black"
                       BorderBrush="LightGray"
                       BorderThickness="1" Margin="635,-1,0,10"/>
            </Grid>
        </Border>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="parent" Margin="10"/>
        </ScrollViewer>

        <Border Grid.Row="2" Background="#f0f0f0" Padding="15" BorderBrush="White" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">

            </StackPanel>
        </Border>
        <Button Content="Добавить" 
                       Click="AddDocuments_Click" 
                       Padding="15,5"
                       Background="White" 
                       Foreground="Black"
                       BorderBrush="LightGray"
                       BorderThickness="1" Margin="11,22,704,9" Grid.Row="2"/>
    </Grid>
</Page>